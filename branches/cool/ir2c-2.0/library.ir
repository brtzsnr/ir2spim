.function "_dispatch_abort", 2, 0
_dispatch_abort:
	VR0 <- VI0			# File name
	VR1 <- VI1     		# Line number 
	VR2 <- 0
	
	param VR2			# Print file name
	param VR0
	call IO.out_string

	VR10 <- __str_colon_msg	# Print ':'
	VR11 <- 1
	param VR10
	param VR11
	call __outString__
	
	param VR2			# Print line number
	param VR1
	call IO.out_int

	VR10 <- __str_dispatch_msg	# Print error message
	VR11 <- 20
	param VR10
	param VR11
	call __outString__
	
    call __abort__
.end
		
