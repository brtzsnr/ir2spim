# Startup code
.function "_start", 0, 0
_start:
	VR0 <- Main_protObj
	param VR0
	call Object.copy
	VR0 <- VO0
	
	param VR0
	call Main_init

	param VR0
	call Main.main
	VR2 <- VO0
	
	VR0 <- __str_term_msg
	VR1 <- 35
	param VR0
	param VR1
	call __outString__
	
	param VR2
	call __abort__
.end

#########################
.function "Object.copy", 1, 1
Object.copy:
    VR0 <- VI0
	load VR1 [VR0, 4] # Object size
	VR5 <- VR1 * 4    # VR1 = size in words; VR5 = size in bytes

	param VR5       # Allocate memory
	call __alloc__
	VR2 <- VO0       # VR2 = target
	
	VR3 <- VR2       # Copy data from VR0 to VR2, VR3 = ptr
__loc1:
    VR4 <- 0 < VR1
	jumpf VR4 __loc2
	load VR4 [VR0, 0]
	store VR4 [VR3, 0]
	VR1 <- VR1 - 1
	VR0 <- VR0 + 4
	VR3 <- VR3 + 4
	jump __loc1
	
__loc2:
	return VR2
.end

