.function "IO.in_int", 0, 1
IO.in_int:
	call __inInt__			# Read a value
	VR0 <- VO0
	
	VR2 <- Int_protObj      # Box it
	param VR2
	call Object.copy
	VR2 <- VO0
	store VR0 [VR2,12]

	return VR2				# Return the boxed object
.end

######################
.function "IO.in_string", 0, 1
IO.in_string:
	call __inString__		# Read the plain data from standard input
	VR0 <- VO0
	VR1 <- VO1
	
	param VR1				# allocate a new string to hold that data
	call __allocString
	VR2 <- VO0
	
	# copy the data into the object
	VR3 <- VR2 + 16
	param VR1
	param VR0
	param VR3
	call __copyBytes	
	
	return VR2
.end
	
