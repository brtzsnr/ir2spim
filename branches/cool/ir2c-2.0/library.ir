.function "Object.abort", 1, 0
Object.abort:
	VR5 <- VI0
	VR0 <- __str_abort_msg
	VR1 <- 24
	param VR0
	param VR1
	call __outString__
	
	load VR0 [VR5, 0]
	VR0 <- VR0 * 4
	VR1 <- class_nameTab
	VR1 <- VR0 + VR1
	load VR1 [VR1, 0]
	VR2 <- 0
	param VR2
	param VR1
	call IO.out_string

	VR0 <- __str_nl_msg
	VR1 <- 1
	param VR0
	param VR1
	call __outString__

	VR0 <- 0
	param VR0
	call __abort__
.end

