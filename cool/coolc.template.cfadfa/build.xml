<project name="CoolIrParser" default="dist" basedir=".">
	<description>
        CoolIr Parser
    </description>
	<!-- set global properties for this build -->
	<property name="src" location="src"/>
	<property name="build" location="bin"/>
	<property name="dist"  location="dist"/>
	<property name="grammarDir" location="${src}/ro/pub/cpl/coolir"/>

	<target name="init">
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}"/>
	</target>

	<target name="cleanGrammar">
		<!-- Cleanup temporary files generated by ANTLRWorks -->
		<delete file="${grammarDir}/__Test__.java"/>
		<delete file="${grammarDir}/__Test___input.txt"/>
		<delete file="${grammarDir}/CoolIr__.g"/>
		<delete file="${grammarDir}/CoolIr.tokens"/>
		<delete file="${grammarDir}/CoolIrLexer.java"/>
		<delete file="${grammarDir}/CoolIrParser.java"/>
	</target>

	<target name="grammar" depends="cleanGrammar,init">
		<java classname="org.antlr.Tool" classpath="lib/antlrworks-1.1.7.jar">
			<arg file="${grammarDir}/CoolIr.g"/>
		</java>
	</target>

	<target name="compile" depends="clean,init,grammar"
        description="compile the source " >
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}">
			<classpath>
				<pathelement location="lib/antlr-runtime-3.0.1.jar"/>
				<pathelement location="lib/stringtemplate-3.0.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="dist" depends="compile"
        description="generate the distribution" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}"/>

		<!-- Add referenced runtime classes -->
		<unjar src="lib/antlr-runtime-3.0.1.jar" dest="${build}">
			<patternset>
				<include name="**/*.class"/>
			</patternset>
		</unjar>

		<!-- Put everything in ${build} into the jar file -->
		<jar jarfile="${dist}/CoolIrParser.jar" basedir="${build}">
			<manifest>
				<attribute name="Main-Class" value="ro.pub.cpl.coolir.Main"/>
			</manifest>
		</jar>
	</target>

	<target name="clean" depends="cleanGrammar" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
	</target>
</project>
