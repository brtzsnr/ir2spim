<project name="SQ2_Interpreter_Hello" default="dist" basedir=".">
    <description>
        SQ2 Interpreter startup
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="grammarDir" location="${src}/ro/pub/cpl/sq2/hello1"/>

  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>
	
  <target name="cleanGrammar">
    <!-- Cleanup temporary files generated by ANTLRWorks -->
    <delete file="${grammarDir}/__Test__.java"/>
    <delete file="${grammarDir}/__Test___input.txt"/>
    <delete file="${grammarDir}/Sq2__.g"/>
    <delete file="${grammarDir}/Sq2.tokens"/>
    <delete file="${grammarDir}/Sq2Lexer.java"/>
    <delete file="${grammarDir}/Sq2Parser.java"/>
  </target>
	

  <target name="grammar" depends="cleanGrammar,init">
  	<java classname="org.antlr.Tool" classpath="antlr/antlr-3.3-complete.jar">
  		<arg file="${grammarDir}/Sq2.g"/>
  	</java>
</target>
	
	
  <target name="compile" depends="grammar"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}">
    	<classpath>
    		<pathelement location="antlr/antlr-3.3-complete.jar"/>
    	</classpath>
    </javac>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}"/>
  	
  	<!-- Add referenced runtime classes -->
  	<unjar src="antlr/antlr-3.3-complete.jar" dest="${build}">
  	    <patternset>
  	        <include name="**/*.class"/>
  	    </patternset>
  	</unjar>

    <!-- Put everything in ${build} into the jar file -->
    <jar jarfile="${dist}/Sq2_Interpreter_Hello.jar" basedir="${build}">
    	<manifest>
    		<attribute name="Main-Class" value="ro.pub.cpl.sq2.hello1.Interpreter"/>
    	</manifest>
    </jar>
  </target>

  <target name="clean" depends="cleanGrammar"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
